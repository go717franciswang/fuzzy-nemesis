<% if builder.object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      <%= t 'errors.count' %><%= pluralize(builder.object.errors.count, t('errors.e')) %>.
    </div>
    <ul>
    <% builder.object.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
