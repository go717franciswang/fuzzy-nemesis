<fieldset class="scenario">
  <%= render 'shared/errors', builder: f %>
  <%= t 'simulation.freq.every' %>
  <%= f.text_field :frequency %>
  <%= f.select :frequency_type, [
    [t('simulation.tunit.day'), :Days],
    [t('simulation.tunit.week'), :Weeks], 
    [t('simulation.tunit.month'), :Months], 
    [t('simulation.tunit.quarter'), :Quarters], 
    [t('simulation.tunit.year'), :Years]
  ] %>
  ,<br />
  <%= f.select :action, [
    [t('simulation.action.buy'), :Buy], 
    [t('simulation.action.sell'), :Sell],
  ] %>
  <%= f.text_field :amount %>
  <%= f.select :unit, [
    [t('simulation.unit.shares'), :Shares],
    [t('simulation.unit.dshares'), :Dollar_shares],
    [t('simulation.unit.pfund'), :Pcg_of_fund],
    [t('simulation.unit.pshares'), :Pcg_of_shares],
  ]%>
  <br />
  <%= t 'simulation.when.price' %>
  <%= f.select :operator, [
    [t('simulation.operator.gt_eq'), :Gt_eq],
    [t('simulation.operator.lt_eq'), :Lt_eq],
  ] %>
  <%= t 'simulation.when.past' %>
  <%= f.text_field :timespan_length %>
  <%= f.select :timespan_unit, [
    [t('simulation.tunit.day'), :Days], 
    [t('simulation.tunit.week'), :Weeks], 
    [t('simulation.tunit.month'), :Months], 
    [t('simulation.tunit.quarter'), :Quarters], 
    [t('simulation.tunit.year'), :Years]
  ] %>
  <%= t 'simulation.when.s' %>
  <br />
  <%= f.select :stat, [
    [t('simulation.stat.max'), :Max], 
    [t('simulation.stat.min'), :Min], 
    [t('simulation.stat.avg'), :Avg],
  ] %>
  <%= f.hidden_field :_destroy %>
  <%= link_to t('stock.delete'), '#', class: 'remove_fields' %>
</fieldset>
